# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-waybar
pkgver=1
pkgrel=1
pkgdesc="A waybar configuration"
arch=('x86_64')
url=https://github.com/mwglen/arch-linux
license=('GPL')
source=('config' 'style.css')
md5sums=('SKIP')
depends=('waybar')

package() {
    mkdir -p $XDG_CONFIG_HOME/waybar
    cp config $XDG_CONFIG_HOME/waybar
    cp style.css $XDG_CONFIG_HOME/waybar
}
