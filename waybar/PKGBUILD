# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-waybar
pkgver=1
pkgrel=1
pkgdesc="A waybar configuration"
arch=('x86_64')
url=https://github.com/mwglen/arch-linux
license=('GPL')
source=('config' 'style.css')
md5sums=('SKIP')
depends=('waybar')

package() {
    config_dir="${XDG_CONFIG_HOME:-$HOME/.config}"
    mkdir -p $pkgdir/$config_dir/waybar
    cp config $pkgdir/$config_dir/waybar
    cp style.css $pkgdir/$config_dir/waybar
}
