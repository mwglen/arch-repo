# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-qutebrowser
pkgver=1
pkgrel=$(date +%s)
pkgdesc="A qutebrowser configuration"
arch=('x86_64')
url=https://github.com/mwglen/arch-linux
license=('GPL')
source=('config.py')
md5sums=('SKIP')
depends=('qutebrowser' 'python-qutescript-git')

package() { 
    config_dir="${XDG_CONFIG_HOME:-~/.config}"
    mkdir -p $pkgdir/$config_dir/qutebrowser
    cp config.py $pkgdir/$config_dir/qutebrowser
}
