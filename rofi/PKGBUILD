pkgname=mwglen-rofi
pkgver=1
pkgrel=1
pkgdesc="A rofi configuration"
arch=('x86_64')
url=https://github.com/mwglen/arch-linux
license=('GPL')
md5sums=('SKIP')

makedepends=('rsync')
depends=(
    'rofi' 'pinentry-rofi' 'rofi-bluetooth-git'
    'rofi-dmenu'
)

package() { 
    rsync --append home $HOME 
    rsync config $XDG_CONFIG_HOME
}
