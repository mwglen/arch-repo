# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-rofi
pkgver=1
pkgrel=1
pkgdesc="A rofi configuration"
arch=('x86_64')
url="https://github.com/mwglen/arch-config/rofi"
license=('GPL')
source=('Xresources' 'config.rasi')
md5sums=('SKIP')
depends=(
    'rofi' 'pinentry-rofi' 'rofi-bluetooth-git'
    'rofi-dmenu'
)

package() { 
    cat Xresources >> $HOME/.Xresources

    mkdir -p $XDG_CONFIG_HOME/rofi
    cp config.rasi $XDG_CONFIG_HOME/rofi
}
