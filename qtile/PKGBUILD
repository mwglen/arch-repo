# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-qtile
pkgver=1
pkgrel=1
pkgdesc="A qtile configuration"
arch=('x86_64')
url="https://github.com/mwglen/arch-config/qtile"
license=('GPL')
source=('config.py')
mda5sums=('SKIP')
makedepends=('curl')
depends=('neovim')

package() {
    config_dir="${XDG_CONFIG_HOME:-$HOME/.config}"
    mkdir -p $pkgdir/$config_dir/qtile
    cp config.py $pkgdir/$config_dir/qtile/config.py
}
