# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-nsxiv
pkgver=1
pkgrel=$(date +%s)
pkgdesc="A nsxiv configuration"
arch=('x86_64')
url="https://github.com/mwglen/arch-config/nsxiv"
license=('GPL')
source=('key-handler' 'zshenv')
md5sums=('SKIP')
depends=('nsxiv' 'devour')

package() { 
    config_dir="${XDG_CONFIG_HOME:-~/.config}"
    mkdir -p $pkgdir/$config_dir/nsxiv/exec
    cp key-handler $pkgdir/$config_dir/nsxiv/exec
}
