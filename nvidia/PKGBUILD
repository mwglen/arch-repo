# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=arch-headless-mwglen
pkgver=1
pkgrel=1
pkgdesc="A headless setup for arch linux"
arch=('x86_64')
url=https://github.com/mwglen/arch-linux
license=('GPL')
md5sums=('SKIP')

#-------------------------------------------------------------------
# Base Packages
depends=('nvidia' 'optimus-manager-qt')
#-------------------------------------------------------------------

package() {
    cat <<EOF >/etc/optimus-manager/optimus-manager.conf
        [optimus]
        switching=nouveau
        pci_power_control=yes
        pci_remove=no
        pci_reset=no
                
        auto_logout=no
        startup_mode=auto
        startup_auto_battery_mode=hybrid
        startup_auto_extpower_mode=hybrid
    EOF
}
