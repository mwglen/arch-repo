# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-xmobar
pkgver=1
pkgrel=1
pkgdesc="A xmobar configuration"
arch=('x86_64')
url="https://github.com/mwglen/arch-config/xmobar"
license=('GPL')
source=('config' 'backlight.sh')
md5sums=('SKIP')
depends=('xmobar' 'trayer' 'ttf-mononoki')

package() {
    mkdir -p $XDG_CONFIG_HOME/xmobar/scripts
    cp backlight.sh $XDG_CONFIG_HOME/xmobar/scripts
    cp config $XDG_CONFIG_HOME/xmobar/
}
