# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-backgroudns
pkgver=1
pkgrel=$(date +%s)
pkgdesc="A collection of backgrounds"
arch=('x86_64')
url=https://github.com/mwglen/arch-config/dunst
license=('GPL')
source=('dunstrc')
md5sums=('SKIP')
depends=('dunst' 'libnotify')

package() {
    bg_dir="${BACKGROUNDS:-$HOME/.config}"
    mkdir -p "$pkgdir/$bg_dir"
    cp *.png *.jpg *.jpeg "$pkgdir/$bg_dir"
}
