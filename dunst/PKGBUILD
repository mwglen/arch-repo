# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-dunst
pkgver=1
pkgrel=$(date +%s)
pkgdesc="A dunst configuration"
arch=('x86_64')
url=https://github.com/mwglen/arch-config/dunst
license=('GPL')
source=('dunstrc')
md5sums=('SKIP')
depends=('dunst' 'libnotify')

package() {
    config_dir="${XDG_CONFIG_HOME:-$HOME/.config}"
    mkdir -p "$pkgdir/$config_dir/dunst"
    cp dunstrc "$pkgdir/$config_dir/dunst"
}
