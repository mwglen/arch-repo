# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-neovim
pkgver=1
pkgrel=1
pkgdesc="A neovim configuration"
arch=('x86_64')
url="https://github.com/mwglen/arch-config/neovim"
license=('GPL')
source=('init.vim')
mda5sums=('SKIP')
makedepends=('curl')
depends=('neovim')

package() {
    config_dir="${XDG_CONFIG_HOME:-$HOME/.config}"
    mkdir -p $pkgdir/$config_dir/nvim/init.vim
    cp init.vim $pkgdir/$config_dir/nvim/init.vim

    data_dir="${XDG_DATA_HOME:-$HOME/.local/share}"
    curl -fLo $pkgdir/$data_dir/nvim/site/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

    # alias vi=nvim
    # alias vim=nvim
    # export EDITOR=nvim
    # export VISUAL=nvim
}
