# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-neovim
pkgver=1
pkgrel=1
pkgdesc="A neovim configuration"
arch=('x86_64')
url=https://github.com/mwglen/arch-linux
license=('GPL')
md5sums=('SKIP')

#-------------------------------------------------------------------
makedepends=('rsync' 'curl')
depends=('neovim')
#-------------------------------------------------------------------

package() {
    rsync config $XDG_CONFIG_HOME
    curl -fLo $XDG_DATA_HOME/nvim/site/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

    alias vi=nvim
    alias vim=nvim
    export EDITOR=nvim
    export VISUAL=nvim
}
