# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-fcitx
pkgver=1
pkgrel=1
pkgdesc="A fcitx configuration"
arch=('x86_64')
url=https://github.com/mwglen/arch-linux
license=('GPL')
md5sums=('SKIP')

makedepends=('rsync')
depends=('fcitx-im' 'fcitx-configtool'
         'fcitx-qt4' 'xmodmap' 'fcitx-mozc')

package() { 
    rsync --append home $HOME 
    rsync config $XDG_CONFIG_HOME
    sudo locale-gen
}
