# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-ranger
pkgver=1
pkgrel=1
pkgdesc="A ranger configuration"
arch=('x86_64')
url=https://github.com/mwglen/arch-linux
license=('GPL')
source=('rc.conf')
md5sums=('SKIP')
depends=('ranger' 'python-ueberzug-git')

package() { 
    config_dir="${XDG_CONFIG_HOME:-$HOME/.config}"
    mkdir -p $pkgdir/$config_dir/ranger
    cp rc.conf $pkgdir/$config_dir/ranger/rc.conf
}
