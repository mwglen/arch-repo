# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-zsh
pkgver=1
pkgrel=1
pkgdesc="A zsh configuration"
arch=('x86_64')
url=https://github.com/mwglen/arch-linux
license=('GPL')
md5sums=('SKIP')

makedepends=('rsync')
depends=('zsh' 'zsh-completions' 'zsh-syntax-highlighting'
         'zsh-autosuggestions')

package() { 
    rsync --append home $HOME 
    rsync config $XDG_CONFIG_HOME

    sudo chsh -s /usr/bin/zsh $USER
}
