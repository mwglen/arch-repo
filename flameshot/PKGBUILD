pkgname=mwglen-flameshot
pkgver=1
pkgrel=1
pkgdesc="A flameshot configuration"
arch=('x86_64')
url="https://github.com/mwglen/arch-config/flameshot"
license=('GPL')
source=('flameshot.ini')
md5sums=('SKIP')
depends=('flameshot')

package() { 
    mkdir -p $XDG_CONFIG_HOME/flameshot
    cp flameshot.ini $XDG_CONFIG_HOME/flameshot
}
