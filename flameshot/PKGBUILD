# Maintainer: Matt Glen <mwg2202@gmail.com>
pkgname=mwglen-flameshot
pkgver=1
pkgrel=1
pkgdesc="A flameshot configuration"
arch=('x86_64')
url="https://github.com/mwglen/arch-config/flameshot"
license=('GPL')
source=('flameshot.ini')
md5sums=('SKIP')
depends=('flameshot')

package() { 
    config_dir="${XDG_CONFIG_HOME:-$HOME/.config}"
    mkdir -p $pkgdir/$config_dir/flameshot
    cp flameshot.ini $pkgdir/$config_dir/flameshot
}
