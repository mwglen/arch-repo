pkgname=mwglen-xmonad
pkgver=1
pkgrel=1
pkgdesc="A xmonad configuration"
arch=('x86_64')
url=https://github.com/mwglen/arch-linux
license=('GPL')
source=('xmonad.hs')
md5sums=('SKIP')
depends=(
    'xmonad' 'xmonad-contrib' 'devour'
    'mwglen-rofi'

    # Notifications
    'libnotify'
)

package() {
    mkdir -p $pkgdir/$HOME/.xmonad
    cp xmonad.hs $pkgdir/$HOME/.xmonad
}
